{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",    
    "noEmit": false,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "vitest"
    ],
    "baseUrl": "./",
    "paths": {
      "@data/*": ["data/*"],
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": [
    "src",
    "tests"
  ]
}